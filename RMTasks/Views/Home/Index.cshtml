@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}
<h1>Departments List</h1>

<p class="float-end">
    <a asp-action="CreateDepartment">Create New Department</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>


                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img class="img-thumbnail" style="max-width:30px" src="@Html.DisplayFor(modelItem => item.Logo)" />
                </td>
                <td>
                    <a asp-action="EditDepartment" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DepartmentDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteDepartment" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
