@model Reminder

<h1>Delete Reminder</h1>

<div>
    <h4>Are you sure you want to delete this reminder?</h4>
    <h4>Title: @Model.Title</h4>
    <h4>Date Time: @Model.DateTime</h4>
    <form asp-action="DeleteReminder" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Reminders">Cancel</a>
    </form>
</div>

