@model Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Department</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">

            <img class="img-thumbnail" style="max-width:100px" src="~/@Model.Logo" />
        </dd>
    </dl>

    <form asp-action="DeleteDepartment">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
